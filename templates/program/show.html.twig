{% extends 'base.html.twig' %}
{% block title %}
	{{ parent() }}
	- Serie -
	{{ program.title }}
{% endblock %}
{% block body %}
	<div class="container mt-4">
		<div class="mt-4">
			<button type="button" class="btn disabled">Serie n°
				{{ program.id }}</button>
			<button type="button" class="btn disabled">Category :
				{{ program.category.name }}</button>
			<button type="button" class="btn disabled">Country :
				{{ program.country }}</button>
			<button type="button" class="btn disabled">Year :
				{{ program.year }}</button>
		</div>
		<div class="card mb-3 d-inline-block mt-4" style="max-width: 800px;">
			<h2 class="card-header">Title :
				{{ program.title }}</h2>
			<img class="align-self-start m-4 img-fluid rounded" src="{{program.poster}}" alt="{{ program.title }} poster">
			<div class="card-body">
				<strong>Acteurs :</strong>
				<ul>
					{% for actor in program.actors %}
						<li>
							<a href="{{ path('actor_show', {'slug': actor.slug}) }}">{{ actor.name }}</a>
						</li>
					{% else %}
						<li>Aucun acteur pour cette série</li>
					{% endfor %}
				</ul>
				<h2>Synopsis</h2>
				<button type="button" class="btn disabled mt-2">
					<p class="card-text">{{ program.synopsis }}</p>
				</button>
			</div>
			<div class="dropdown m-3">
				<div class="dropdown show">
					<a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Saisons
					</a>
					<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
						{% for season in program.seasons %}
							<a class="dropdown-item" href="{{ path('program_season_show', {'slug': program.slug, 'seasonId': season.slug}) }}">Saison
								{{ season.number }}</a>
							<hr class="hr">
						{% endfor %}
					</div>
				</div>
			</div>
			<div class="card-footer">
				<a href="{{ path('program_index') }}" class="btn">
					Return to list of series
				</a>
			</div>
		</div>
	</div>
{% endblock %}
